        <div class="input-group">
            <input type="text" id="defaultRegisterFormFirstName" class="form-control" placeholder="Enter Customer Code" name="CustomerCode">
            <div class="input-group-append">
                <button class="btn btn-info my-4 btn-block" type="submit">Search</button>
            </div>
        </div>
    </form>*@
    <table class="table table-bordered table-hover">

        <thead class="bg-info text-center text-white">
            <tr>
                <th>SL</th>
                <th>Code</th>
                <th>Name        </th>
                <th>Address</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Loyality Point</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="text-center" style="background-color : lightgray;">
            @{ int sl = 1;}
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@(sl++)</td>
                    <td>@customer.CustomerCode</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.CustomerAddress</td>
                    <td>@customer.CustomerEmail</td>
                    <td>@customer.CustomerContact</td>
                    <td>@customer.CustomerLP</td>
                    <td>
                        <a href="/customer/Edit?ID=@customer.ID" class="btn btn-primary btn-xs" title="Edit">
                            <span class="glyphicon glyphicon-edit">Edit</span>
                        </a>
                        <a href="/customer/Delete?ID=@customer.ID" onclick="return confirm('Are you sure to delete this !!');" class="btn btn-danger btn-xs" title="Delete">
                            <span class="glyphicon glyphicon-trash">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
