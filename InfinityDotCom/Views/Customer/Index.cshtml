@model List<InfinityDotCom.Models.Models.Customer>




<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <form class="form-horizontal" action="/customer/index" method="post">
                    <div class="card-body">
                        <h4 class="card-title card-header">Add Customer</h4>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerCode">Code</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="CustomerCode" placeholder="Enter Code" name="CustomerCode"required>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerName">Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="CustomerName" placeholder="Enter Name" name="CustomerName"required>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerAddress">Address</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="CustomerAddress" placeholder="Enter Address" name="CustomerAddress">
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerEmail">Email</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="CustomerEmail" placeholder="Enter Email" name="CustomerEmail"required="Enter Valied Email">
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerContact">Contact</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="CustomerContact" placeholder="Enter Contact" name="CustomerContact"required>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerLP">Loyality Point</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" id="CustomerLP" placeholder="Enter Loyality Point" name="CustomerLP">

                            </div>
                        </div>
                    </div>
                    <div class="border-top">
                        <div class="row card-body">
                            <div class="col-md-9"></div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary">Add Customer</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top : 15px; margin-bottom : 250px;">
