@model InfinityDotCom.Models.Models.Master

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <form class="form-horizontal" action="/customer/update" method="post">
                    <div class="card-body">
                        <h4 class="card-title card-header">Update Product</h4>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerCode">Code</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="CustomerCode" placeholder="Enter Code" name="CustomerCode" value="@Model.Customer.CustomerCode">
                                <input type="hidden" class="form-control" id="ID" name="ID" value="@Model.Customer.ID">
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerName">Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="CustomerName" placeholder="Enter Name" name="CustomerName" value="@Model.Customer.CustomerName">
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerAddress">Address</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="CustomerAddress" placeholder="Enter Address" name="CustomerAddress" value="@Model.Customer.CustomerAddress">
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerEmail">Email</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="CustomerEmail" placeholder="Enter Email" name="CustomerEmail" value="@Model.Customer.CustomerEmail">
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerContact">Contact</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="CustomerContact" placeholder="Enter Contact" name="CustomerContact" value="@Model.Customer.CustomerContact">
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 text-right control-label col-form-label" for="CustomerLP">Loyality Point</label>
                            <div class="col-md-9">
                                <input type="number" class="form-control" id="CustomerLP" placeholder="Enter Loyality Point" name="CustomerLP" value="@Model.Customer.CustomerLP">

                            </div>
                        </div>
                    </div>
                    <div class="border-top">
                        <div class="row card-body">
                            <div class="col-md-9"></div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary">Update Customer</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top : 15px; margin-bottom : 250px;">
    <table class="table table-bordered table-hover">
        <thead class="bg-info text-center text-white">
            <tr>
                <th>SL</th>
                <th>Code</th>
                <th>Name        </th>
                <th>Address</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Loyality Point</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="text-center" style="background-color : lightgray;">
            @{ int sl = 1;}
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@(sl++)</td>
                    <td>@customer.CustomerCode</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.CustomerAddress</td>
                    <td>@customer.CustomerEmail</td>
                    <td>@customer.CustomerContact</td>
                    <td>@customer.CustomerLP</td>
                    <td>
                        <a href="/customer/Edit?ID=@customer.ID" class="btn btn-primary btn-xs" title="Edit">
                            <span class="glyphicon glyphicon-edit">Edit</span>
                        </a>
                        <a href="/customer/Delete?ID=@customer.ID" onclick="return confirm('Are you sure to delete this !!');" class="btn btn-danger btn-xs" title="Delete">
                            <span class="glyphicon glyphicon-trash">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
    </body>
    </html>
